<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE0B7"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/HeaderBackground"
        android:id="@+id/relativelayout1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logodairy"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/logodairy"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/tv_desimilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DesiMilk"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            />

        <SearchView
            android:id="@+id/sv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_margin="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout1"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUR PRODUCTS"
            android:textColor="@color/ProductColor"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoy Your Health.Feel Cool, be Cool"
            android:textColor="@color/CommentColor"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@id/tv1"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_cowmilk"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cowmilk" />

        <Button
            android:id="@+id/btn_cowmilk"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_cowmilk"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! CowMilk"
            android:textColor="@color/White" />

        <ImageView
            android:id="@+id/iv_buffallo"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bufallo" />


        <Button
            android:id="@+id/btn_buffallo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_buffallo"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! Buffallo"
            android:textColor="@color/White" />

        <ImageView
            android:id="@+id/iv_chhach"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@+id/btn_cowmilk"
            android:layout_alignParentLeft="true"
            android:src="@drawable/chhach" />

        <Button
            android:id="@+id/btn_chhach"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_chhach"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! Chhach"
            android:textColor="@color/White" />

        <ImageView
            android:id="@+id/iv_ghee"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@+id/btn_buffallo"
            android:layout_alignParentRight="true"
            android:src="@drawable/ghee" />

        <Button
            android:id="@+id/btn_ghee"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ghee"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! Ghee"
            android:textColor="@color/White" />

        <ImageView
            android:id="@+id/iv_curd"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/btn_chhach"
            android:layout_alignParentLeft="true"
            android:src="@drawable/curd" />

        <Button
            android:id="@+id/btn_curd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_curd"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! Curd"
            android:textColor="@color/White" />

        <ImageView
            android:id="@+id/iv_paneer"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_below="@id/btn_ghee"
            android:layout_alignParentRight="true"
            android:src="@drawable/paneer" />

        <Button
            android:id="@+id/btn_paneer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_paneer"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonround"
            android:gravity="center"
            android:text="click!! Paneer"
            android:textColor="@color/White" />


    </RelativeLayout>


</RelativeLayout>
</ScrollView>